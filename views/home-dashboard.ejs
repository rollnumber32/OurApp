<%- include("includes/header.ejs") %>

<main>
  <%- include("includes/flash") %>
  <% if(posts.length != 0){ %>
    <div class="flex flex-col gap-2 py-10 px-96"><h1 class="text-2xl font-bold">Feed</h1><% posts.forEach((post) => {%><a class="border hover:bg-gray-100 rounded p-2" href="/post/<%= post._id %>"><strong><%=post.title %></strong> by <%= post.author.username%></a><% });%></div>
    <% } else{%>
  <div>
  <div class="flex flex-col items-center text-center px-96 py-16">
